<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.memoquest.app" >

    <application
        android:name="com.memoquest.app.init.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- Notice this tag which provides the database name -->
        <meta-data
            android:name="AA_DB_NAME"
            android:value="memoquest.db" />

        <!-- Notice this tag which provides the database version -->
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="1" />

        <activity
            android:name="com.memoquest.app.init.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.memoquest.app.game.Game1Activity"
            android:label="@string/title_activity_game1" >
        </activity>
        <activity
            android:name="com.memoquest.app.game.GlobalQuizGameActivity"
            android:label="@string/title_activity_game1" >
        </activity>
        <activity
            android:name="com.memoquest.app.init.MenuActivity"
            android:label="@string/title_activity_menu" >
        </activity>
        <activity
            android:name="com.memoquest.app.init.ConnectionActivity"
            android:label="@string/title_activity_connection" >
        </activity>
        <activity
            android:name="com.memoquest.app.init.SwitchUserActivity"
            android:label="@string/title_activity_switch_user" >
        </activity>
        <activity
            android:name="com.memoquest.app.game.QuizChoiceActivity"
            android:label="@string/title_activity_game_choice" >
        </activity>
        <activity
            android:name="com.memoquest.app.game.addquiz.AddQuizActivity"
            android:label="@string/title_activity_add_quiz" >
        </activity>
        <activity
            android:name="com.memoquest.app.game.addquiz.SearchForAddQuizActivity"
            android:label="@string/title_activity_search_by_name" >
        </activity>
        <activity
            android:name="com.memoquest.app.game.SearchForGameQuizActivity"
            android:label="@string/title_activity_search_for_game_quiz" >
        </activity>
        <activity
            android:name="com.memoquest.app.game.Game0Activity"
            android:label="@string/title_activity_game0" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

</manifest>
